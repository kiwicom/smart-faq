{
  "name": "@kiwicom/smart-faq",
  "version": "0.0.1",
  "scripts": {
    "start": "NODE_ENV=development LANGUAGE=en webpack-dev-server --open",
    "build": "npm run clean && npm run build:lib && npm run build:flow",
    "build:lib": "babel --out-dir lib --ignore *.stories.js,*.test.js src",
    "build:flow": "flow-copy-source -v -i '**/*.?(stories|test).js' src lib",
    "clean": "rimraf lib es",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest --config=jest.json",
    "test-ci": "yarn flow:check && yarn eslint && yarn test",
    "flow": "flow --color always --show-all-errors --no-auto-start",
    "flow:check": "flow check",
    "flow:start": "flow start",
    "flow:status": "flow status",
    "flow:stop": "flow stop",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "translations:collect": "i18next-scanner 'src/**/*.{js,jsx}'"
  },
  "main": "lib/index.js",
  "author": "kiwi.com",
  "devDependencies": {
    "@storybook/addon-actions": "^3.3.15",
    "@storybook/addon-knobs": "^3.3.15",
    "@storybook/react": "^3.3.15",
    "babel-cli": "^6.26.0",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.4",
    "babel-eslint": "^8.2.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.13.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "^0.66.0",
    "flow-copy-source": "^1.3.0",
    "flow-typed": "^2.3.0",
    "jest": "^22.4.2",
    "prettier-eslint": "^8.8.1",
    "rimraf": "^2.6.2",
    "clean-webpack-plugin": "0.1.18",
    "html-webpack-plugin": "3.0.6",
    "i18next-scanner": "2.4.6",
    "webpack": "4.1.0",
    "webpack-cli": "2.0.10",
    "webpack-dev-server": "3.1.0"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "styled-jsx": "^2.2.5",
    "i18next": "10.5.0",
    "react-i18next": "7.4.0"
  }
}
