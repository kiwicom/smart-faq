[ignore]
<PROJECT_ROOT>/build/*
<PROJECT_ROOT>/dist/*
<PROJECT_ROOT>/lib/*
__mocks__/*
.*/node_modules/cypress
.*/node_modules/config-chain

[include]

[libs]
flow-typed

[lints]

[options]
emoji=true

# stop flow complaining when you use require() with something other than a string literal.
module.ignore_non_literal_requires=true

suppress_comment=\\(.\\|\n\\)*\\$FlowExpectedError: .+
suppress_comment=\\(.\\|\n\\)*\\$FlowIssue: https://github.com/facebook/flow/issues/[0-9]+
